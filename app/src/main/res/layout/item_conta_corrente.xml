<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@color/laranja_secundario"
    android:padding="10dp">

    <TextView
        android:id="@+id/text_corrente_name"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="nome da conta"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_corrente_id"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:text="id da conta"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/text_corrente_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_corrente_banco"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:text="nome do banco"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/text_corrente_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_corrente_saldo"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="saldo da conta"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/text_corrente_name"
        app:layout_constraintTop_toBottomOf="@+id/text_corrente_name" />

    <TextView
        android:id="@+id/text_corrente_limite"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:text="limite da conta"
        app:layout_constraintStart_toEndOf="@+id/text_corrente_saldo"
        app:layout_constraintTop_toBottomOf="@+id/text_corrente_name" />


    <ImageView
        android:id="@+id/image_view_details"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_arrow_forward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>